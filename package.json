{
  "name": "css-variables-vscode",
  "displayName": "CSS Variables (LSP)",
  "description": "Project-wide CSS variable autocomplete, hover, go-to-definition and color support via css-variable-lsp.",
  "version": "0.3.1",
  "publisher": "miclmn451",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lmn451/css-variables-vscode"
  },
  "keywords": [
    "css",
    "variables",
    "custom properties",
    "autocomplete",
    "intellisense",
    "lsp"
  ],
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:less",
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro",
    "onLanguage:postcss",
    "onLanguage:ripple"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "CSS Variables (LSP)",
      "properties": {
        "cssVariables.lookupFiles": {
          "type": "array",
          "default": [
            "**/*.less",
            "**/*.scss",
            "**/*.sass",
            "**/*.css",
            "**/*.html",
            "**/*.vue",
            "**/*.svelte",
            "**/*.astro",
            "**/*.ripple"
          ],
          "items": {
            "type": "string"
          },
          "description": "Glob patterns to scan for CSS variables. Replaces the defaults."
        },
        "cssVariables.blacklistFolders": {
          "type": "array",
          "default": [
            "**/.cache/**",
            "**/.DS_Store",
            "**/.git/**",
            "**/.hg/**",
            "**/.next/**",
            "**/.svn/**",
            "**/bower_components/**",
            "**/CVS/**",
            "**/dist/**",
            "**/node_modules/**",
            "**/tests/**",
            "**/tmp/**"
          ],
          "items": {
            "type": "string"
          },
          "description": "Glob patterns to exclude from scanning. Replaces the defaults."
        },
        "cssVariables.colorOnlyVariables": {
          "type": "boolean",
          "default": true,
          "description": "Show color decorations only on var(--...) usages."
        },
        "cssVariables.noColorPreview": {
          "type": "boolean",
          "default": false,
          "description": "Disable color decorations entirely."
        },
        "cssVariables.pathDisplay": {
          "type": "string",
          "enum": [
            "relative",
            "absolute",
            "abbreviated"
          ],
          "default": "relative",
          "description": "Controls how definition paths are displayed in hover/completion details."
        },
        "cssVariables.pathDisplayLength": {
          "type": "number",
          "minimum": 0,
          "default": 1,
          "description": "Segment length for abbreviated path display."
        },
        "cssVariables.undefinedVarFallback": {
          "type": "string",
          "enum": [
            "warning",
            "info",
            "off"
          ],
          "default": "warning",
          "description": "Fallback severity when hovering undefined CSS variables."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package-extension",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package-extension": "node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "package": "vsce package"
  },
  "dependencies": {
    "css-variable-lsp": "^1.0.16",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "3.7.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40"
}
